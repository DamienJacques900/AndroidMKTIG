<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


            <Button
                android:text="@string/coffee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="43dp"
                android:layout_marginStart="43dp"
                android:id="@+id/buttonChoiceCoffee"
                android:backgroundTint="@color/buttonColor"
                android:textColor="@color/textColorButton"/>

            <Button
                android:text="@string/client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/buttonChoiceCoffee"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="60dp"
                android:layout_marginEnd="60dp"
                android:id="@+id/buttonChoiceClient"
                android:backgroundTint="@color/buttonColor"
                android:textColor="@color/textColorButton"/>

    <TextView
                android:text="@string/choice_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="103dp"
                android:id="@+id/textView14" />

    <android.support.v7.widget.SwitchCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:id="@+id/switch3"
        android:layout_below="@+id/buttonChoiceClient"
        android:layout_centerHorizontal="true"
        android:textOff="@string/client"
        android:textOn="@string/coffee"
        app:showText="true"/>

</RelativeLayout>