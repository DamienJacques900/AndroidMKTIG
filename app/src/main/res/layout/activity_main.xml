    <TextView
        android:text="@string/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_marginLeft="62dp"
        android:layout_marginStart="62dp"
        android:layout_above="@+id/userNameConnection"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/userNameConnection"
        android:layout_above="@+id/passwordConnection"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginBottom="17dp" />

    <TextView
        android:text="@string/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_above="@+id/passwordConnection"
        android:layout_alignLeft="@+id/passwordConnection"
        android:layout_alignStart="@+id/passwordConnection" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordConnection"
        android:layout_above="@+id/buttonMain_fragment"
        android:layout_alignLeft="@+id/userNameConnection"
        android:layout_alignStart="@+id/userNameConnection"
        android:layout_marginBottom="21dp" />

    <fragment android:name="com.damienjacques.cafesuspendu.FragmentButtonMain"
        android:id="@+id/buttonMain_fragment"
        android:layout_weight="match_parent"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        tools:layout="@layout/activity_fragment_main"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
