<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:text="@string/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4"
                android:layout_alignLeft="@+id/textView4"
                android:layout_alignStart="@+id/textView4"
                android:layout_marginTop="45dp"
                android:id="@+id/textView10" />

            <TextView
                android:text="@string/coffee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginStart="26dp"
                android:id="@+id/textView16"
                android:layout_alignBaseline="@+id/numberCoffeePromoRegistrationCoffee"
                android:layout_alignBottom="@+id/numberCoffeePromoRegistrationCoffee"
                android:layout_toRightOf="@+id/buttonRegistrationCoffee"
                android:layout_toEndOf="@+id/buttonRegistrationCoffee" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/userNameRegistrationCoffee"
                android:layout_below="@+id/textView4"
                android:layout_alignLeft="@+id/textView10"
                android:layout_alignStart="@+id/textView10" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/passwordRegistrationCoffee"
                android:layout_below="@+id/textView10"
                android:layout_alignLeft="@+id/textView56"
                android:layout_alignStart="@+id/textView56" />

            <TextView
                android:text="@string/coffeeRegistrationConfirmPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView56"
                android:layout_below="@+id/passwordRegistrationCoffee"
                android:layout_alignLeft="@+id/textView10"
                android:layout_alignStart="@+id/textView10" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editText2"
                android:layout_below="@+id/passwordRegistrationCoffee"
                android:layout_alignLeft="@+id/textView56"
                android:layout_alignStart="@+id/textView56"
                android:layout_marginTop="21dp" />

            <TextView
                android:text="@string/street"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                android:layout_below="@+id/editText2"
                android:layout_alignLeft="@+id/editText2"
                android:layout_alignStart="@+id/editText2" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/streetRegistrationCoffee"
                android:layout_below="@+id/textView11"
                android:layout_alignLeft="@+id/textView11"
                android:layout_alignStart="@+id/textView11" />

            <TextView
                android:text="@string/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                android:layout_below="@+id/streetRegistrationCoffee"
                android:layout_alignLeft="@+id/numberRegistrationCoffee"
                android:layout_alignStart="@+id/numberRegistrationCoffee" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/numberRegistrationCoffee"
                android:layout_below="@+id/textView12"
                android:layout_alignLeft="@+id/streetRegistrationCoffee"
                android:layout_alignStart="@+id/streetRegistrationCoffee" />

            <TextView
                android:text="@string/promoAfter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView13"
                android:layout_marginTop="51dp"
                android:layout_below="@+id/textView12"
                android:layout_alignLeft="@+id/numberRegistrationCoffee"
                android:layout_alignStart="@+id/numberRegistrationCoffee" />

            <TextView
                android:text="@string/valuePromo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView15"
                android:layout_below="@+id/numberCoffeePromoRegistrationCoffee"
                android:layout_alignLeft="@+id/numberCoffeePromoRegistrationCoffee"
                android:layout_alignStart="@+id/numberCoffeePromoRegistrationCoffee" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/numberCoffeePromoRegistrationCoffee"
                android:layout_below="@+id/textView13"
                android:layout_alignLeft="@+id/textView13"
                android:layout_alignStart="@+id/textView13" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/valuePromoRegistrationCoffee"
                android:layout_below="@+id/textView15"
                android:layout_alignLeft="@+id/textView15"
                android:layout_alignStart="@+id/textView15" />

            <Button
                android:text="@string/registration"
                android:layout_height="wrap_content"
                android:id="@+id/buttonRegistrationCoffee"
                android:backgroundTint="@color/buttonColor"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="@color/textColorButton"/>

            <TextView
                android:text="@string/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginStart="21dp"
                android:id="@+id/textView4"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>