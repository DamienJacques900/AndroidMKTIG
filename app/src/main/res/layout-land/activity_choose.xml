<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!--android:thumb="@drawable/switch_thumb"/>-->

    <android.support.v7.widget.SwitchCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch3"
        android:textOff="@string/client"
        android:textOn="@string/coffee"
        app:showText="true"
        android:layout_alignBaseline="@+id/textView14"
        android:layout_alignBottom="@+id/textView14"
        android:layout_toRightOf="@+id/registrationButton"
        android:layout_toEndOf="@+id/registrationButton" />

    <TextView
        android:text="@string/choice_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:id="@+id/textView14"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/registrationButton"
        android:layout_alignEnd="@+id/registrationButton"
        android:layout_marginRight="47dp"
        android:layout_marginEnd="47dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/inscriptionclient"
        android:id="@+id/registrationImage"
        android:layout_marginRight="37dp"
        android:layout_marginEnd="37dp"
        android:layout_marginTop="39dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="@string/registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registrationButton"
        android:backgroundTint="@color/buttonColor"
        android:textColor="@color/textColorButton"
        android:layout_marginBottom="17dp"
        android:layout_marginLeft="97dp"
        android:layout_marginStart="97dp"
        android:layout_alignBottom="@+id/registrationImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <!--//android:thumb="@drawable/switch_thumb"
    //android:track="@drawable/switch_bg"/>
//android:track="@drawable/switch_bg"-->


</RelativeLayout>