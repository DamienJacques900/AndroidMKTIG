<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo"
        android:id="@+id/imageView3"
        android:layout_marginRight="312dp"
        android:layout_marginEnd="312dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Identifiant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="201dp"
        android:layout_marginEnd="201dp"
        android:layout_marginTop="57dp"
        android:id="@+id/UserNameMain" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/UserNameMain"
        android:layout_alignLeft="@+id/UserNameMain"
        android:layout_alignStart="@+id/UserNameMain"
        android:id="@+id/UserNameMainEdit" />

    <TextView
        android:text="Mot de passe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UserNameMainEdit"
        android:layout_alignLeft="@+id/UserNameMainEdit"
        android:layout_alignStart="@+id/UserNameMainEdit"
        android:id="@+id/PasswordMain" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/PasswordMain"
        android:layout_alignLeft="@+id/PasswordMain"
        android:layout_alignStart="@+id/PasswordMain"
        android:id="@+id/PasswordMainEdit"
        android:layout_alignRight="@+id/UserNameMainEdit"
        android:layout_alignEnd="@+id/UserNameMainEdit" />

    <Button
        android:text="Inscription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/RegistrationMainButton"
        android:layout_below="@+id/ConnectionMainButton"
        android:layout_alignLeft="@+id/ConnectionMainButton"
        android:layout_alignStart="@+id/ConnectionMainButton"
        android:backgroundTint="@color/buttonColor"
        android:textColor="@color/textColorButton"/>

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/PasswordMain"
        android:layout_toEndOf="@+id/PasswordMain"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="11dp" />

    <Button
        android:text="Connexion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ConnectionMainButton"
        android:backgroundTint="@color/buttonColor"
        android:textColor="@color/textColorButton"
        android:layout_below="@+id/PasswordMainEdit"
        android:layout_alignLeft="@+id/PasswordMainEdit"
        android:layout_alignStart="@+id/PasswordMainEdit" />
</RelativeLayout>