<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="@string/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_below="@+id/userNameBidder"
                android:layout_alignLeft="@+id/userNameBidder"
                android:layout_alignStart="@+id/userNameBidder" />

            <TextView
                android:text="@string/client_bidder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_marginTop="12dp"
                android:layout_below="@+id/textView17"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="45dp"
                android:layout_marginStart="45dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/userNameBidder"
                android:layout_below="@+id/textView2"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignStart="@+id/textView2" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/numberCoffeeBidder"
                android:layout_below="@+id/textView18"
                android:layout_alignLeft="@+id/textView18"
                android:layout_alignStart="@+id/textView18" />

            <TextView
                android:text="@string/numberCoffeeOffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView18"
                android:layout_below="@+id/passwordBidder"
                android:layout_alignLeft="@+id/passwordBidder"
                android:layout_alignStart="@+id/passwordBidder" />

            <Button
                android:text="@string/offer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonOffer"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/numberCoffeeBidder"
                android:layout_toEndOf="@+id/numberCoffeeBidder"
                android:layout_marginBottom="16dp" />

            <TextView
                android:text="@string/thanksOffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/thankYou"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:layout_above="@+id/textView18"
                android:layout_toRightOf="@+id/buttonOffer"
                android:layout_toEndOf="@+id/buttonOffer"
                android:layout_marginLeft="22dp"
                android:layout_marginStart="22dp" />

            <TextView
                android:text="@string/coffeeOfferTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView17"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:layout_marginTop="13dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/passwordBidder"
                android:layout_below="@+id/textView5"
                android:layout_alignLeft="@+id/textView5"
                android:layout_alignStart="@+id/textView5" />

        </RelativeLayout>
    </ScrollView>

</LinearLayout>